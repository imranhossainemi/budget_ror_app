<section class='text-center'>
  <h3>Welcome to Budget app</h3>
  <% if current_user.present? %>
    <h4><%= current_user.name %></h4>
    <%= button_to "Logout", destroy_user_session_path, method: :delete, class: 'btn btn-outline-danger' %>
    <div class='budget_view'>
      <%= link_to 'View Your Budget Plans', budget_types_path,class: 'btn btn-primary mr-2' %>
    </div>
  <% else %>
    <div class="ml-auto ">
      <%= link_to 'Login', new_user_session_path, class: 'btn btn-primary mr-2' %>
      <%= link_to 'Sign-up', new_user_registration_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</section>